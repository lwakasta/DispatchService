@model DispatchService.Models.LoginModel

@{
    Layout = null;
    ViewBag.Title = "Авторизация";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link type="text/css" rel="stylesheet" href="~/Content/modal.css" />
    <link type="text/css" rel="stylesheet" href="~/Content/site_style.css" />
    <script src="~/Scripts/modernizr-2.8.3.js" type="text/javascript"></script>
    <script src="~/Scripts/jquery-3.4.1.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.js" type="text/javascript"></script>
</head>
<body>
    <main>
        <div class="auth-box">
            <div class="auth-box-main">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <h1 class="auth-box-main-title">Авторизация</h1>
                    @Html.ValidationSummary(true, "", new { @class = "val-sum" })
                    <p class="auth-box-subtitle">Имя пользователя</p>
                    <img src="~/Content/svg/user.svg" alt="log-ico" class="auth-box-ico">
                    <input type="text" class="auth-box-input" name="login">
                    <p class="auth-box-subtitle">Пароль</p>
                    <img src="~/Content/svg/key.svg" alt="pass-ico" class="auth-box-ico">
                    <input type="password" class="auth-box-input auth-box-pass" name="password">
                    <button type="submit" class="auth-box-but">ВОЙТИ</button>
                }
            </div>
        </div>
    </main>
</body>
</html>